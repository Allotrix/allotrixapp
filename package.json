{
  "name": "automationapp",
  "productName": "Allotrix",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron ./main.js",
    "rebuild": "./node_modules/.bin/electron-rebuild",
    "deploy": "node ./config/firebase-deploy.js",
    "package": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "Atheeb",
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.2",
    "electron-localshortcut": "^3.2.1",
    "electron-prompt": "^1.7.0",
    "electronmon": "^2.0.2",
    "express": "^4.18.2",
    "firebase": "^10.2.0",
    "fs": "^0.0.1-security",
    "google-auth-library": "^9.0.0",
    "googleapis": "^126.0.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "toastify": "^2.0.1"
  },
  "devDependencies": {
    "electron": "^25.2.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.allotrix.app",
    "productName": "Allotrix",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "renderer/**/*",
      "package.json",
      "main.js",
      "styles.css",
      "index.html",
      "env.json"
    ],
    
    "win": {
      "target": "nsis",
      "icon": "renderer/assets/a.ico"
    },
    "mac": {
      "target": "dmg",
      "category": "allotrix.app.category",
      "icon": "renderer/assets/a.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "snap",
        "deb",
        "rpm"
      ]
    }
  }
}
